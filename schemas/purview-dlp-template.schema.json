{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Purview DLP Oversharing Dialog Template",
  "type": "object",
  "properties": {
    "LocalizationData": {
      "type": "array",
      "description": "Array of localized dialog configurations (maximum 10 languages)",
      "minItems": 1,
      "maxItems": 10,
      "items": {
        "type": "object",
        "properties": {
          "Language": {
            "type": "string",
            "description": "Language code (e.g., en-US, es-ES)",
            "enum": [
              "en-US", "es-ES", "fr-FR", "de-DE", "ja-JP", "pt-BR", "ru-RU",
              "zh-CN", "zh-TW", "it-IT", "ko-KR", "nl-NL", "pl-PL", "tr-TR",
              "sv-SE", "cs-CZ", "da-DK", "fi-FI", "el-GR", "hu-HU", "no-NO",
              "pt-PT", "ro-RO", "sk-SK", "th-TH", "uk-UA", "ar-SA", "he-IL",
              "id-ID", "ms-MY", "vi-VN", "bg-BG", "hr-HR", "et-EE", "lv-LV",
              "lt-LT", "sl-SI", "sr-Latn-RS", "ca-ES", "eu-ES", "gl-ES"
            ]
          },
          "Title": {
            "type": "string",
            "description": "Dialog title. Supports tokens: %%MatchedRecipientsList%%, %%MatchedLabelName%%, %%MatchedAttachmentName%%",
            "maxLength": 75
          },
          "Body": {
            "type": "string",
            "description": "Dialog body text. Supports tokens: %%MatchedRecipientsList%%, %%MatchedLabelName%%, %%MatchedAttachmentName%%. Formatting tags (Body only): <Bold></Bold>, <Italic></Italic>, <Underline></Underline>, <LineBreak /> or <br>",
            "maxLength": 800
          },
          "Options": {
            "type": "array",
            "description": "Array of option buttons displayed to the user (maximum 3 custom options, each max 100 characters)",
            "maxItems": 3,
            "items": {
              "type": "string",
              "maxLength": 100
            }
          }
        },
        "required": ["Language", "Title", "Body", "Options"]
      }
    },
    "HasFreeTextOption": {
      "type": "boolean",
      "description": "Whether to include a free text input option"
    },
    "DefaultLanguage": {
      "type": "string",
      "description": "Default language fallback",
      "enum": [
        "en-US", "es-ES", "fr-FR", "de-DE", "ja-JP", "pt-BR", "ru-RU",
        "zh-CN", "zh-TW", "it-IT", "ko-KR", "nl-NL", "pl-PL", "tr-TR",
        "sv-SE", "cs-CZ", "da-DK", "fi-FI", "el-GR", "hu-HU", "no-NO",
        "pt-PT", "ro-RO", "sk-SK", "th-TH", "uk-UA", "ar-SA", "he-IL",
        "id-ID", "ms-MY", "vi-VN", "bg-BG", "hr-HR", "et-EE", "lv-LV",
        "lt-LT", "sl-SI", "sr-Latn-RS", "ca-ES", "eu-ES", "gl-ES"
      ]
    }
  },
  "required": ["LocalizationData", "HasFreeTextOption", "DefaultLanguage"]
}
