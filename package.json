{
  "name": "purview-dlp-oversharing-dialogs",
  "displayName": "Purview DLP Oversharing Dialogs",
  "description": "An open-source & lightweight Visual Studio Code extension that assists with token & text formatting in JSON templates for Microsoft Purview oversharing dialogs.",
  "version": "1.0.0",
  "publisher": "tomhhealy",
  "engines": {
    "vscode": "^1.108.1"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "purview-dlp-oversharing-dialogs.createTemplate",
        "title": "Purview DLP: Create oversharing dialog template"
      },
      {
        "command": "purview-dlp-oversharing-dialogs.testDialog",
        "title": "Purview DLP: Preview Dialog"
      },
      {
        "command": "purview-dlp-oversharing-dialogs.switchPreviewLanguage",
        "title": "Purview DLP: Switch Preview Language"
      }
    ],
    "configuration": {
      "title": "Purview DLP Oversharing Dialogs",
      "properties": {
        "purviewDlp.testDialog.matchedRecipientsList": {
          "type": "string",
          "default": "example@example.com",
          "description": "Placeholder value for %%MatchedRecipientsList%% token in dialog preview"
        },
        "purviewDlp.testDialog.matchedLabelName": {
          "type": "string",
          "default": "Confidential",
          "description": "Placeholder value for %%MatchedLabelName%% token in dialog preview"
        },
        "purviewDlp.testDialog.matchedConditions": {
          "type": "string",
          "default": "Credit Card Number detected",
          "description": "Placeholder value for %%MatchedConditions%% token in dialog preview"
        },
        "purviewDlp.enableTokenCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Enable token auto-completion when typing `%%` in JSON template files files. Disable/Enable this setting when required to avoid it interfering with other JSON files."
        }
      }
    },
    "languages": [
      {
        "id": "purview-dlp-json",
        "aliases": [
          "JSON - Purview DLP Oversharing Template",
          "purview-dlp"
        ],
        "extensions": [
          ".purview-dlp.json"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "purview-dlp-json",
        "scopeName": "source.json.purview-dlp",
        "path": "./syntaxes/purview-dlp.json"
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "*.purview-dlp.json",
        "url": "./schemas/purview-dlp-template.schema.json"
      }
    ],
    "snippets": [
      {
        "language": "purview-dlp-json",
        "path": "./snippets/purview-dlp.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "pnpm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "pnpm run compile && pnpm run lint",
    "lint": "eslint src",
    "test": "vscode-test",
    "package": "vsce package -o dist/"
  },
  "devDependencies": {
    "@types/vscode": "^1.108.1",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "typescript-eslint": "^8.52.0",
    "eslint": "^9.39.2",
    "typescript": "^5.9.3",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2"
  }
}
